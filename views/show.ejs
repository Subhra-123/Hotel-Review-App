<%- include ('partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Res-Review</p>
            <div class="list-group">
                <li class="list-group-item active ">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive"class="img-fluid" alt="Responsive image" style="width:100%" src="<%=resturant.image %>">
              <div class="caption-full">
                <h4 class="pull-right">Rs 4000/night</h4>
                <h4><a><%=resturant.name%></a></h4>
                <p><%=resturant.description %></p>
                <p>
                    <em>Submitted By<%=resturant.author.username%></em>
                </p>
                <%if(currentUser &&resturant.author.id.equals(currentUser._id)){%>
                <a class="btn btn-warning" href="/hotels/<%=resturant._id%>/edit">Edit</a>
                <form style="display: inline;" action="/hotels/<%=resturant._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        <%}%>
            </div>
        </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/hotels/<%=resturant._id%>/comments/new">Write A Review</a>
                </div>
                <hr>
                <%resturant.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=comment.author.username%></strong>
                            
                            <span class="pull-right"><%=moment(comment.createdAt).format("DD/MM/YYYY")%></span>
                            <p>
                                <%=comment.text%>
                            </p>
                            <%if(currentUser &&comment.author.id.equals(currentUser._id)){%>
                            <a class="btn btn-xs btn-warning" href="/hotels/<%=resturant._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form style="display: inline;" action="/hotels/<%=resturant._id%>/comments/<%=comment._id%>?_method=DELETE " method="POST">
                            <input type="submit" class="btn btn-danger btn-xs" value="Delete">
                        </form>
                        <%}%>
                            

                        </div>
                    </div>
                    <%})%>

            </div>
        
        </div>
    </div>
</div>


<%- include ('partials/footer') %>