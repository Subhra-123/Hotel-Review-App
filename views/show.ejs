        <div class="col-md-9" >
            <div class="thumbnail post">
                <img class="img-responsive"class="img-fluid" alt="Responsive image" style="width:100%" src="<%=resturant.image %>">
              <div class="caption-full">
                <h4 class="pull-right">â‚¹ <%=resturant.price%>/Night</h4>
                <h4><a><%=resturant.name%></a></h4>
                <p><%=resturant.description %></p>
                <p>
                    <em>Submitted By <strong><em><%=resturant.author.username%></em></strong></em>
                </p>
                <%if(currentUser &&resturant.author.id.equals(currentUser._id)){%>
                <a class="btn btn-warning" href="/hotels/<%=resturant._id%>/edit">Edit</a>
                <form style="display: inline;" action="/hotels/<%=resturant._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        <%}%>
            </div>
        </div>
        <div class="text-right ">
            <a class="btn btn-success button" href="/hotels/<%=resturant._id%>/comments/new">Write A Review</a>
        </div>
        <%resturant.comments.forEach(function(comment){%>
            <div class="well comment" >
                
                    <div class="row">
                        <div class="col-md-12">
                            <strong style="padding-bottom: 10px;"><%=comment.author.username%></strong>
                            
                            <span class="pull-right"><%=moment(comment.createdAt).format("DD-MM-YYYY")%></span>
                            <p>
                                <%=comment.text%>
                            </p>
                            <%if(currentUser &&comment.author.id.equals(currentUser._id)){%>
                            <a class="btn btn-xs btn-warning" href="/hotels/<%=resturant._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form style="display: inline;" action="/hotels/<%=resturant._id%>/comments/<%=comment._id%>?_method=DELETE " method="POST">
                            <input type="submit" class="btn btn-danger btn-xs" value="Delete">
                        </form>
                        <%}%>
                            

                        </div>
                    </div>
                    

            </div>
            <%})%>
        
        </div>
    </div>
</div>


