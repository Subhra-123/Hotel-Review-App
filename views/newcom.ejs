<%- include ('partials/header') %>
<div class="container" style="margin-top: 200px;">

    <h3 style="text-align: center;" id="hot-nam">Add New Review to <%=resturant.name%></h3>
    <div style="width:30%; margin:25px auto;">
        <form action="/hotels/<%=resturant._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text"  name="comment[text]" placeholder="text"> 
            </div>
           
            
            <div class="form-group">
                <button  class="btn btn-primary btn-block">Submit!</button>
            </div>

            </form>
            <a href="/hotels">Go Back!!</a>

    </div>
    

</div>
<% -include ('partials/footer') %>