<%- include ('partials/header') %>
<div class="container" style="margin-top: 100px;">

    <h1 style="text-align: center;">Edit <%=resturant.name%></h1>
    <div style="width:60%; margin:25px auto;">
        <form action="/hotels/<%=resturant._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text"  name="resturant[name]" value="<%=resturant.name%>"> 
            </div>
            <div class="form-group">
                <input class="form-control" type="number"  name="resturant[price]" value="<%=resturant.price%>"> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="resturant[image1]" value="<%=resturant.image1%>">   
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="resturant[image2]" value="<%=resturant.image2%>">   
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="resturant[image3]" value="<%=resturant.image3%>">   
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="resturant[description]" value="<%=resturant.description%>">  
            </div>
              
            <div class="form-group">
                <input class="form-control" type="text" name="resturant[location]" value="<%=resturant.location%>">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="resturant[website]" value="<%=resturant.website %>">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="resturant[contact]"value="<%=resturant.contact%>">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="resturant[booking]" value="<%=resturant.booking %>">  
            </div>



            <div class="form-group">
                <button  class="btn btn-primary btn-block">Submit!</button>
            </div>

            </form>
            <a href="/hotels/<%=resturant._id%>">Go Back!!</a>

    </div>
    


</div>
<% -include ('partials/footer') %>